{%- capture direction -%}{% render 'direction' %}{%- endcapture -%}

<style>
  :root {
    /*
      _TABLE_OF_CONTENT (Quick Navigation == Double click + Ctrl+F + Enter)

      _Fonts
        _Initialization
        _Body
        _Heading
        _Accent
        _Icon
      _Spacing
        _Spacer
        _Gutter
      _General
        _Page
        _Utilities
        _Container
        _Zindex
        _Borders
        _Buttons
        _Inputs
        _Dropdown
        _Transitions
        _Animations
        _Shadows
        _Overlay
      _Sections
        _Header
        _Footer
        _Drawer
        _Slideshow
        _Collection_grid
      _Components
        _Back_to_top_button
      _Others
        _Social_media
        _Translations
      _Addons
        _Page_transition
        _Product_image_crop
        _Newsletter_popup
    */

    /*============================================================================
      _Fonts
    ============================================================================*/

    /*================ _Initialization ================*/
    {%- liquid
      assign heading_font = settings.heading_font
      assign text_font = settings.text_font
      assign accent_font = settings.accent_font
      assign icons = settings.icon | split: '-'
      assign icon_font = ''

      for icon in icons
        assign icon_capitalized = icon | capitalize

        unless forloop.last
          assign icon_font = icon_font | append: icon_capitalized | append: ' '
        else
          assign icon_font = icon_font | append: icon_capitalized
        endunless
      endfor
    -%}
    /*================ END _Initialization ================*/

    /*================ _Body ================*/
    {%- liquid
      assign text_font_size = settings.text_font_size
      assign text_font_size_lg = text_font_size | times: 1.2 | floor
      assign text_font_size_sm = text_font_size | times: 0.8 | floor
      assign text_font_size_xs = text_font_size | times: 0.6 | floor
      assign text_line_height = 1.5
      assign text_font_letter_spacing = settings.text_font_letter_spacing
    -%}

    --text-font-family: {{ text_font.family }}, {{ text_font.fallback_families }};
    --text-font-weight: {{ text_font.weight }};
    --text-font-style: {{ text_font.style }};
    --text-font-size: {{ text_font_size }}px;
    --text-font-size-lg: {{ text_font_size_lg }}px;
    --text-font-size-sm: {{ text_font_size_sm }}px;
    --text-font-size-xs: {{ text_font_size_xs }}px;
    --text-line-height: {{ text_line_height }};
    --text-letter-spacing: {% if direction == 'rtl' %}0{% else %}{{ text_font_letter_spacing }}px{% endif %};
    /*================ END _Body ================*/

    /*================ _Heading ================*/
    {%- liquid
      assign page_link_color = settings.page_link_color
      assign heading_font_size = settings.heading_font_size
      assign heading_font_size_big = settings.heading_font_size_big
      assign heading_text_transform = settings.heading_text_transform
      assign heading_letter_spacing = settings.heading_letter_spacing
      assign heading_bg_color = page_link_color | color_modify: 'alpha', opacity_percentage

      assign heading_1_font_size = heading_font_size
      assign heading_2_font_size = heading_font_size | times: 0.8 | floor
      assign heading_3_font_size = heading_font_size | times: 0.7 | floor
      assign heading_4_font_size = heading_font_size | times: 0.6 | floor
      assign heading_5_font_size = heading_font_size | times: 0.5 | floor
      assign heading_6_font_size = text_font_size
    -%}

    --heading-font-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};
    --heading-font-size: {{ heading_font_size }}px;
    --heading-font-size-big: {{ heading_font_size_big }}px;
    --heading-font-weight: {{ heading_font.weight }};
    --heading-font-style: {{ heading_font.style }};
    --heading-text-transform: {{ heading_text_transform }};
    --heading-letter-spacing: {% if direction == 'rtl' %}0{% else %}{{ heading_letter_spacing }}px{% endif %};
    --heading-alignment: center;
    --heading-bg-color: {{ heading_bg_color }};
    --heading-0-font-size: 40px;
    --heading-1-font-size: {{ heading_1_font_size }}px;
    --heading-2-font-size: {{ heading_2_font_size }}px;
    --heading-3-font-size: {{ heading_3_font_size }}px;
    --heading-4-font-size: {{ heading_4_font_size }}px;
    --heading-5-font-size: {{ heading_5_font_size }}px;
    --heading-6-font-size: {{ heading_6_font_size }}px;
    /*================ END _Heading ================*/

    /*================ _Accent ================*/
    {%- liquid
      assign accent_text_transform = settings.accent_text_transform
      assign accent_letter_spacing = settings.accent_letter_spacing
    -%}

    --accent-font-family: {{ accent_font.family }}, {{ accent_font.fallback_families }};
    --accent-font-weight: {{ accent_font.weight }};
    --accent-font-style: {{ accent_font.style }};
    --accent-text-transform: {{ accent_text_transform }};
    --accent-letter-spacing: {% if direction == 'rtl' %}0{% else %}{{ accent_letter_spacing }}px{% endif %};
    /*================ END _Accent ================*/

    /*================ _Icon ================*/
    {%- liquid
      assign icon_select_url = 'icon-select.svg' | asset_url | json
      assign icon_select_overlay_url = 'icon-select-overlay.svg' | asset_url | json
      assign icon_select_footer_url = 'icon-select-footer.svg' | asset_url | json
      assign icon_payment_size = settings.payment_icon_size
      assign page_headings_color = settings.page_heading_color
      assign icon_placeholder_color = page_headings_color | color_modify: 'alpha', opacity_percentage
    -%}

    --icon-font: {{ icon_font }};
    --icon-font-size-xl: 48px;
    --icon-font-size-lg: 36px;
    --icon-font-size-md: 24px;
    --icon-font-size-sm: 18px;
    --icon-font-size-xs: 12px;
    --icon-loading: 'cached';
    --icon-select-url: url({{ icon_select_url }});
    --icon-select-overlay-url: url({{ icon_select_overlay_url }});
    --icon-select-footer-url: url({{ icon_select_footer_url }});
    --icon-payment-size: {{ icon_payment_size }}px;
    --icon-placeholder-color: {{ icon_placeholder_color }}px;
    /*================ END _Icon ================*/


    /*============================================================================
      _Spacing
    ============================================================================*/

    /*================ _Spacer ================*/
    {%- liquid
      assign spacer = text_font_size
      assign spacer_lg = text_font_size | times: 1.5 | floor
      assign spacer_sm = text_font_size | times: 0.5 | floor
      assign spacer_xs = text_font_size | times: 0.25 | floor
    -%}

    --spacer: {{ spacer }}px;
    --spacer-lg: {{ spacer_lg }}px;
    --spacer-sm: {{ spacer_sm }}px;
    --spacer-xs: {{ spacer_xs }}px;
    /*================ END _Spacer ================*/

    /*================ _Gutter ================*/
    {%- liquid
      assign gutter = 30
      assign gutter_lg = gutter | times: 2
      assign gutter_sm = 16
      assign gutter_xs = gutter_sm | divided_by: 2
    -%}

    --gutter: {{ gutter }}px;
    --gutter-lg: {{ gutter_lg }}px;
    --gutter-sm: {{ gutter_sm }}px;
    --gutter-xs: {{ gutter_xs }}px;
    /*================ END _Gutter ================*/


    /*============================================================================
      _General
    ============================================================================*/

    /*================ _Page ================*/
    --page-background: {{ settings.page_background.rgb }};
    --page-accent-background: {{ settings.page_accent_background.rgb }};
    --page-border: {{ settings.page_border_color.rgb }};
    --page-heading: {{ settings.page_heading_color.rgb }};
    --page-text: {{ settings.page_text_color.rgb }};
    --page-button-background: {{ settings.page_button_background.rgb }};
    --page-button-text: {{ settings.page_button_text_color.rgb }};
    --page-link: {{ settings.page_link_color.rgb }};
    --page-input-background: {{ settings.page_input_background.rgb }};
    --page-error: {{ settings.page_error_color.rgb }};
    --page-sale: {{ settings.page_sale_color.rgb }};
    /*================ END _Page ================*/

    /*================ _Utilities ================*/
    {%- liquid
      assign opacity = 0.6
      assign opacity_percentage = opacity | times: 100
      assign page_background = settings.page_background
      assign page_text_color = settings.page_text_color
      assign color_text_muted = page_background | color_mix: page_text_color, opacity_percentage
      assign scale = 1.3
      assign scroll_bar_width = 16.5
    -%}

    --opacity: {{ opacity }};
    --text-muted-color: {{ color_text_muted }};
    --scale: {{ scale }};
    --scroll-bar-width: {{ scroll_bar_width }}px;
    /*================ END _Utilities ================*/

    /*================ _Container ================*/
    --page-container-width: {{ settings.page_container_width }}px;
    /*================ END _Container ================*/

    /*================ _Zindex ================*/
    {%- liquid
      assign zindex_base = 0
      assign zindex_increment = 3
      assign zindex_over_body = zindex_base | plus: zindex_increment
      assign zindex_header = zindex_over_body | plus: zindex_increment
      assign zindex_drawer = settings.overlay_z_index
      assign zindex_drawer_overlay = zindex_drawer | minus: zindex_increment
      assign zindex_drawer_under_overlay = zindex_drawer_overlay | minus: zindex_increment
      assign zindex_modal = zindex_drawer | plus: zindex_increment | plus: zindex_increment
      assign zindex_modal_overlay = zindex_drawer | plus: zindex_increment
    -%}

    --zindex-base: {{ zindex_base }};
    --zindex-increment: {{ zindex_increment }};
    --zindex-over-body: {{ zindex_over_body }};
    --zindex-header: {{ zindex_header }};
    --zindex-drawer: {{ zindex_drawer }};
    --zindex-drawer-overlay: {{ zindex_drawer_overlay }};
    --zindex-drawer-under-overlay: {{ zindex_drawer_under_overlay }};
    --zindex-modal: {{ zindex_modal }};
    --zindex-modal-overlay: {{ zindex_modal_overlay }};
    /*================ END _Zindex ================*/

    /*================ _Borders ================*/
    {%- liquid
      assign border_width = settings.border_width
      assign border_style = 'solid'
      assign border_color = settings.page_border_color
      assign border_radius = settings.border_radius
      assign border_radius_sm = 3
      assign border_radius_is_circle = border_radius | append: 'px'
    
      if border_radius == 30
        assign border_radius_is_circle = '50%'
      endif
    -%}

    --border-width: {{ border_width }}px;
    --border-radius: {{ border_radius }}px;
    --border-radius-sm: {{ border_radius_sm }}px;
    --border-radius-circle: 50%;
    --border-radius-is-circle: {{ border_radius_is_circle }};
    --borders: {{ border_width }}px {{ border_style }} {{ border_color }};
    /*================ END _Borders ================*/

    /*================ _Buttons ================*/
    {%- liquid
      assign button_spacing_x = settings.button_padding_x
      assign button_spacing_x_sm = 10
      assign button_spacing_x_xs = 8
      assign button_spacing_y = settings.button_padding_y
      assign button_spacing_y_sm = 6
      assign button_spacing_y_xs = 4
    
      assign button_bg_color = settings.page_input_background | color_to_hex
      assign button_primary_bg_color = settings.page_button_background | color_to_hex

      assign arrow_bg_color = settings.page_background | color_to_hex
      assign custom_buy_it_now_text = settings.custom_buy_now_text
    -%}

    --button-horizontal-padding: {{ button_spacing_x }}px;
    --button-horizontal-padding-sm: {{ button_spacing_x_sm }}px;
    --button-horizontal-padding-xs: {{ button_spacing_x_xs }}px;
    --button-vertical-padding: {{ button_spacing_y }}px;
    --button-vertical-padding-sm: {{ button_spacing_y_sm }}px;
    --button-vertical-padding-xs: {{ button_spacing_y_xs }}px;
    --default-button-background-hover: {{ button_bg_color | color_darken: 7.5 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --default-button-border-color-hover: {{ button_bg_color | color_darken: 10 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --default-button-box-shadow-hover: {{ button_bg_color | color_darken: 20 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --default-button-background-active: {{ button_bg_color | color_darken: 12.5 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --default-button-border-color-active: {{ button_bg_color | color_darken: 15 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --primary-button-background-hover: {{ button_primary_bg_color | color_darken: 7.5 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --primary-button-border-color-hover: {{ button_primary_bg_color | color_darken: 10 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --primary-button-box-shadow-hover: {{ button_primary_bg_color | color_lighten: 20 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --primary-button-background-active: {{ button_primary_bg_color | color_darken: 12.5 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --primary-button-border-color-active: {{ button_primary_bg_color | color_darken: 15 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --primary-outline-button-box-shadow-hover: {{ button_primary_bg_color | color_lighten: 20 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --primary-reveal-button-box-shadow-hover: {{ button_primary_bg_color | color_lighten: 20 | color_to_rgb | remove: 'rgb(' | remove: ')' }};

    --arrow-background-hover: {{ arrow_bg_color | color_darken: 7.5 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --arrow-border-color-hover: {{ arrow_bg_color | color_darken: 10 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --arrow-box-shadow-hover: {{ arrow_bg_color | color_darken: 20 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --arrow-background-active: {{ arrow_bg_color | color_darken: 12.5 | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --arrow-border-color-active: {{ arrow_bg_color | color_darken: 15 | color_to_rgb | remove: 'rgb(' | remove: ')' }};

    --custom-buy-it-now-text: "{{ custom_buy_it_now_text }}";
    /*================ END _Buttons ================*/

    /*================ _Inputs ================*/
    {%- liquid
      assign input_border_width = border_width | times: 2
    
      assign input_spacing_inner = text_font_size | times: text_line_height
      assign input_spacing_inner_xs = text_font_size_sm | times: text_line_height
    
      assign input_paddings_inner = button_spacing_y | times: 2
      assign input_paddings_inner_sm = button_spacing_y_sm | times: 2
      assign input_paddings_inner_xs = button_spacing_y_xs | times: 2
    
      assign input_height_inner = input_spacing_inner | plus: input_paddings_inner | floor
      assign input_height_inner_sm = input_spacing_inner | plus: input_paddings_inner_sm | floor
      assign input_height_inner_xs = input_spacing_inner_xs | plus: input_paddings_inner_xs | floor
    
      assign input_height = input_height_inner | plus: input_border_width
      assign input_height_sm = input_height_inner_sm | plus: input_border_width
      assign input_height_xs = input_height_inner_xs | plus: input_border_width

      assign input_bg_color = settings.page_input_background | color_to_hex
      assign input_bg_color_brightness = input_bg_color | color_brightness
      assign input_bg_color_hover = input_bg_color | color_darken: 7.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign input_border_color_hover = input_bg_color | color_darken: 10 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign input_shadow_color_hover = input_bg_color | color_darken: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign input_bg_color_active = input_bg_color | color_darken: 12.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign input_border_color_active = input_bg_color | color_darken: 15 | color_to_rgb | remove: 'rgb(' | remove: ')'
    
      if input_bg_color_brightness < 50
        assign input_shadow_color_hover = input_bg_color | color_lighten: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      endif
    -%}

    --input-height-inner: {{ input_height_inner }}px;
    --input-height-inner-sm: {{ input_height_inner_sm }}px;
    --input-height-inner-xs: {{ input_height_inner_xs }}px;
    --input-height: {{ input_height }}px;
    --input-height-sm: {{ input_height_sm }}px;
    --input-height-xs: {{ input_height_xs }}px;
    --input-bg-color-hover: {{ input_bg_color_hover }};
    --input-border-color-hover: {{ input_border_color_hover }};
    --input-shadow-color-hover: {{ input_shadow_color_hover }};
    --input-bg-color-active: {{ input_bg_color_active }};
    --input-border-color-active: {{ input_border_color_active }};
    /*================ END _Inputs ================*/

    /*================ _Dropdown ================*/
    {%- liquid
      assign dropdown_min_width = 175
      assign dropdown_max_width = 250
      assign dropdown_padding = gutter_xs
    -%}

    --dropdown-min-width: {{ dropdown_min_width }}px;
    --dropdown-max-width: {{ dropdown_max_width }}px;
    --dropdown-padding: {{ dropdown_padding }}px;
    /*================ END _Dropdown ================*/

    /*================ _Transitions ================*/
    {%- liquid
      assign transition_timing = 'ease'
      assign transition_duration = 0.6
      assign transition_duration_fast = 0.3
      assign transition_duration_slow = 1
    -%}

    --transition-timing: {{ transition_timing }};
    --transition-duration: {{ transition_duration }}s;
    --transition-duration-fast: {{ transition_duration_fast }}s;
    --transition-duration-slow: {{ transition_duration_slow }}s;
    --transition: all {{ transition_duration_fast }}s {{ transition_timing }};
    --transition-drawers: all {{ transition_duration }}s {{ transition_timing }};
    --transition-hover: opacity {{ transition_duration_fast }}s {{ transition_timing }},
                        background {{ transition_duration_fast }}s {{ transition_timing }},
                        border {{ transition_duration_fast }}s {{ transition_timing }},
                        box-shadow {{ transition_duration_fast }}s {{ transition_timing }};
    /*================ END _Transitions ================*/

    /*================ _Animations ================*/
    --animation-duration: {{ transition_duration }}s;
    --animation-offset: {{ spacer }}px;
    /*================ END _Animations ================*/

    /*================ _Shadows ================*/
    {%- liquid
      assign page_bg_color = settings.page_background | color_to_hex
      assign page_bg_color_brigtness = page_bg_color | color_brightness
      assign shadow_base_color = '#FFF'
      assign shadow_opacity = 0.07
    
      if page_bg_color_brigtness > 50
        assign shadow_base_color = '#000'
      endif
    
      assign shadow_color = shadow_base_color | color_modify: "alpha", shadow_opacity
    -%}

    --shadow: 0px 0px 40px {{ shadow_color }};
    /*================ END _Shadows ================*/

    /*================ _Overlay ================*/
    --overlay-background: {{ settings.overlay_background.rgb }};
    --overlay-text-color: {{ settings.overlay_text_color.rgb }};
    --overlay-opacity: {{ settings.overlay_opacity | divided_by: 100.0 }};
    /*================ END _Overlay ================*/

    /*============================================================================
      _Sections
    ============================================================================*/

    /*================ _Header ================*/
    --header-background: {{ settings.header_background.rgb }};
    --header-border-color: {{ settings.header_border_color.rgb }};
    --header-text-color: {{ settings.header_text_color.rgb }};
    --header-menu-font-size: {{ settings.header_menu_font_size }}px;
    --header-height-desktop: {{ settings.header_height_desktop }}px;
    --header-height-mobile: {{ settings.header_height_mobile }}px;
    /*================ END _Header ================*/

    /*================ _Footer ================*/
    {%- liquid
      assign footer_background = settings.footer_background | color_to_hex
      assign footer_text = settings.footer_text_color | color_to_hex
      assign footer_text_muted = footer_background | color_mix: footer_text, opacity_percentage
      assign footer_text_muted = footer_text_muted | color_to_rgb | remove: 'rgb(' | remove: ')'
    
      assign footer_bg_color = settings.footer_background | color_to_hex
      assign footer_bg_color_brightness = footer_bg_color | color_brightness
      assign footer_bg_color_hover = footer_bg_color | color_darken: 7.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_border_color_hover = footer_bg_color | color_darken: 10 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_shadow_color_hover = footer_bg_color | color_darken: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_bg_color_active = footer_bg_color | color_darken: 12.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_border_color_active = footer_bg_color | color_darken: 15 | color_to_rgb | remove: 'rgb(' | remove: ')'
    
      if footer_bg_color_brightness < 50
        assign footer_shadow_color_hover = footer_bg_color | color_lighten: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      endif
    
      assign footer_input_bg_color = settings.footer_input_background | color_to_hex
      assign footer_input_bg_color_brightness = footer_input_bg_color | color_brightness
      assign footer_input_bg_color_hover = footer_input_bg_color | color_darken: 7.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_input_border_color_hover = footer_input_bg_color | color_darken: 10 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_input_shadow_color_hover = footer_input_bg_color | color_darken: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_input_bg_color_active = footer_input_bg_color | color_darken: 12.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_input_border_color_active = footer_input_bg_color | color_darken: 15 | color_to_rgb | remove: 'rgb(' | remove: ')'
    
      if footer_input_bg_color_brightness < 50
        assign footer_input_shadow_color_hover = footer_input_bg_color | color_lighten: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      endif
    
      assign footer_primary_button_bg_color = settings.footer_button_background | color_to_hex
      assign footer_primary_button_bg_color_brightness = footer_primary_button_bg_color | color_brightness
      assign footer_primary_button_bg_color_hover = footer_primary_button_bg_color | color_darken: 7.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_primary_button_border_color_hover = footer_primary_button_bg_color | color_darken: 10 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_primary_button_shadow_color_hover = footer_primary_button_bg_color | color_darken: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_primary_button_bg_color_active = footer_primary_button_bg_color | color_darken: 12.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_primary_button_border_color_active = footer_primary_button_bg_color | color_darken: 15 | color_to_rgb | remove: 'rgb(' | remove: ')'
    
      if footer_primary_button_bg_color_brightness < 50
        assign footer_primary_button_shadow_color_hover = footer_primary_button_bg_color | color_lighten: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      endif
    
      assign footer_primary_outline_button_bg_color = settings.footer_button_background | color_to_hex
      assign footer_primary_outline_button_bg_color_brightness = footer_primary_outline_button_bg_color | color_brightness
      assign footer_primary_outline_button_bg_color_hover = footer_primary_outline_button_bg_color | color_darken: 7.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_primary_outline_button_border_color_hover = footer_primary_outline_button_bg_color | color_darken: 10 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_primary_outline_button_shadow_color_hover = footer_primary_outline_button_bg_color | color_darken: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_primary_outline_button_bg_color_active = footer_primary_outline_button_bg_color | color_darken: 12.5 | color_to_rgb | remove: 'rgb(' | remove: ')'
      assign footer_primary_outline_button_border_color_active = footer_primary_outline_button_bg_color | color_darken: 15 | color_to_rgb | remove: 'rgb(' | remove: ')'
    
      if footer_primary_outline_button_bg_color_brightness < 50
        assign footer_primary_outline_button_shadow_color_hover = footer_primary_outline_button_bg_color | color_lighten: 20 | color_to_rgb | remove: 'rgb(' | remove: ')'
      endif
    -%}

    --footer-background: {{ settings.footer_background.rgb }};
    --footer-accent-background: {{ settings.footer_accent_background.rgb }};
